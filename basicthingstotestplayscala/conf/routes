# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~


#Read all
GET     /foods                      controllers.FoodController.listFood

#Create one
POST    /foods                      controllers.FoodController.newFood

#Read one
GET     /food/:id                   controllers.FoodController.findById(id : String)

#Delete one
DELETE  /food/:id                   controllers.FoodController.deleteFood(id : String)

#Update one
PUT     /food/:id                   controllers.FoodController.updateFood(id : String)




# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
